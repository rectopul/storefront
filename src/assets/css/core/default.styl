.p-lg
    @media screen and (min-width: 992px)
        padding-left: 120px !important
        padding-right: 120px !important
.link-archive
    background: linear-gradient(to top, #000000, #252525)
    text-align: center
    font-family: Roboto
    font-weight: 700
    font-size: 15px
    color: #FFDE14
    letter-spacing: 0
    text-align: center
    border-radius: 38px
    display: inline-block
    margin: 0 auto
    padding 15px 60px
    transition: all 500ms ease
    text-decoration: none
    &.pmore
        padding 15px 130px
    &:hover 
        text-decoration: none
        color: #252525 !important
        background: linear-gradient(to top, #E6C912, #FFDE14)
    &:visited
       color: #FFDE14 
.link-white
    background: linear-gradient(228deg, #F1F0F5 0%, #D7D7D7 100%)
    text-align: center
    font-family: Roboto
    font-weight: 700
    font-size: 15px
    color: #252525
    letter-spacing: 0
    text-align: center
    text-transform: uppercase
    border-radius: 38px
    display: inline-block
    margin: 0 auto
    padding 14px 90px
    border 1px solid transparent
    &:hover 
        text-decoration: none
        color: #FFDE14
        border 1px solid #FFFFFF
        background: linear-gradient(228deg, #000000 0%, #000000 100%)
    &:active,
    &:visited
       color: #252525 

/* Containers */
.container-auaha,
.container  
    width: 100%
    margin-right: auto
    margin-left: auto

