.banner1
    margin-top 120px
    position: relative
    z-index: 0
    &:after
        position: absolute
        display: block
        content ''
        background rgba(0,0,0,0.76)
        width: 100%
        height 100%
        left 0
        top 0
        z-index: 1
    &__title
        z-index: 3
        & h1 
            font-weight: 400
            color: #FFDE14
            letter-spacing: 0
            text-align: center
        & article
            margin-top: 15px 
            margin-bottom: 25px
            font-family: Roboto
            font-weight: 400
            font-size: 16px
            color: #FFFFFF
            letter-spacing: 0
            text-align: center
/* Carrossel membros */
.equipehome
    margin-top: 85px
    margin-bottom: 85px
    & .link-archive
        text-transform: uppercase
        padding: 15px 100px
    &__head
        margin-bottom: 30px
        & h1 
            font-family: Roboto 
            font-weight: 400
            font-size: 35px
            color: #252525
            letter-spacing: 0
            text-align: center
        & small 
            font-family: Roboto
            font-weight: 400
            font-size: 16px
            color: #8F8F8F
            letter-spacing: 0
            text-align: center
    &__carroussel
        & .showcase__arrow-yellow
            top 49%
        &-container
            overflow-x: hidden
            padding-bottom: 30px
            padding-right: 19px !important
            margin-right: -20px
            border-top-left-radius: 38px
            border-top-right-radius: 38px
    &__item
        background: #FFFFFF
        border: 1px solid #F1F0F5
        box-shadow: 4px 4px 6px 0 rgba(0,0,0,0.03)
        border-radius: 38px
        padding: 18px
        & figure
            margin-left: -18px
            margin-right: -18px
            margin-top: -18px             
            &, & img 
                border-top-left-radius: 38px
                border-top-right-radius: 38px
