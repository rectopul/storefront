.somos
    padding-top 190px
    padding-bottom 190px
    &__swiper
        position relative
        &:after
            position absolute
            content ''
            width 50%
            height 108%
            right -15px
            top 50%
            margin-top -372px
            background-color #126885
    &__images
        overflow hidden        
    &__swiper
        display flex
        flex-direction column
        flex-wrap nowrap
        justify-content flex-end
    &__pagination
        position relative
        display flex
        flex-flow row nowrap
    &__content
        color #FFFFFF
    &__title
        color: #FFFFFF
        &:after
            content ''
            width 190px
            height 0
            border-bottom 2px solid #1AB3E8
            display block
            margin-right auto
            margin-top 40px
            margin-bottom 50px
    &__tags
        display flex
        flex-flow column nowrap
        justify-content space-between
        align-items flex-start
        margin-top 30px
        & li
            position relative
            padding-left 20px
            line-height 1
            margin-bottom 10px
            display inline-block
            &:before
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                display: inline-block;
                width: 0;
                height: 0;
                border-left: 15px solid #1ab3e8;
                border-bottom: 15px solid transparent;
                border-top: 0 solid transparent;    