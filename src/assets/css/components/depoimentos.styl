
.depoiments
    &__title
        & h1 
            text-align center
            font-family: Roboto 
            font-weight: 400
            font-size: 35px
            color: #252525
            letter-spacing: 0
            margin-top: 80px
        & small 
            font-family: Roboto 
            font-weight: 400
            font-size: 16px
            color: #8F8F8F
            letter-spacing: 0
            text-align: center
            width: 100%
            display: block
            margin 0 auto
            margin-top: 5px
            margin-bottom: 35px
    &__items
        overflow-x: hidden
        margin-right: -30px
        padding-right: 30px !important
        padding-bottom: 30px
    &__item
        background: #FFFFFF
        border: 1px solid #F1F0F5
        box-shadow: 9px 9px 10px 0 rgba(0,0,0,0.06)
        border-radius: 38px
        padding 30px
        height 260px
        & figure 
            display: flex
            flex-flow row nowrap
            justify-content: center
            align-items: center
            width: 95px
            height 95px    
            background: #252525
            box-shadow: 9px 9px 10px 0 rgba(0,0,0,0.06)
            border-radius: 38px  
            margin-right: 15px    
            & img 
                width 100%
                max-width: 100%
                border-radius: 38px   
        &-content
            font-family: Roboto
            font-weight: 400
            font-size: 14px
            color: #8F8F8F
            letter-spacing: 0
    &__head
        display: flex
        flex-flow: row nowrap
        align-items: center
        justify-content: flex-start
        &-txt
            display: flex
            flex-flow: column nowrap
            justify-content: center
            flex 1
            align-items: flex-start
            margin-top: -15px
            & .profile
                & > span
                    font-family: Roboto
                    font-weight: 400
                    font-size: 16px
                    color: #252525
                    letter-spacing: 0
                    text-align: center
    &__the__title
        font-family: Roboto 
        font-weight: 400
        font-size: 13px
        color: #8F8F8F
        letter-spacing: 0
        line-height: 14px
        margin 6px 0
    & .categori__validate
        & span 
            color: #FFE700