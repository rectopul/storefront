.search-form
    & article
        display flex
        width 100%
        height 76px
        background #ffffff
        border-radius 40px
        flex-flow row nowrap
        justify-content space-between
        z-index 3
    & [class*='search-form__nv']
        flex 1
        padding 0 35px
        display flex
        flex-flow row nowrap
        justify-content space-between
        position relative
        &.active
            z-index 3
            &:after
                content url('data:image/svg+xml;base64,')                
            & ul                 
                & > li
                    color #252525
                    &:hover
                        background rgba(0,0,0,0.6)
                        color: #FFFFFF !important
            &:hover
                cursor: initial                
        &:after
            content url('data:image/svg+xml;base64,')
            width: 7px
            height 7px
            display inline-block
            align-self center
            line-height 7px
            position absolute
            right 0px
            top 50%
            margin-top -3.5px
            z-index 3
        &:hover
            cursor: no-drop
        &:first-child
            border-top-left-radius 40px
            border-bottom-left-radius 40px
        & ul 
            display flex
            flex-flow column nowrap
            justify-content flex-start
            font-family: Roboto
            font-size: 18px
            color: #D7D7D7
            letter-spacing: 0
            height auto
            white-space nowrap
            background #FFFFFF
            width: 100%
            position: absolute
            left 35px
            top 0
            z-index 1
            max-height 76px
            overflow hidden
            &.active
                max-height 1000px
            & > li 
                flex 0 0 76px
                line-height 76px
                padding 0 20px                
    &__nv-1
        & ul 
            & > li 
                color #252525
    &__filter
        flex 0 0 195px
        background-image: linear-gradient(230deg, #040404 0%, #252525 100%)
        border-radius: 38px
        outline: 0
        border 0
        font-family Roboto
        font-weight 700
        font-size: 15px
        color: #FFDE14
        letter-spacing: 0
        text-align: center
        margin 2px 2px 2px
        text-transform uppercase
        z-index: 4
        &:hover
            color #FFFFFF
