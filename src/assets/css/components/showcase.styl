.showcase
    position relative
    @media screen and (min-width: 993px)
        padding-top: 60px
        padding-bottom 0
        margin-top: 60px
    &__carroussel
        overflow hidden     
        margin-bottom: -150px   
    & > .container
        position relative
        margin-bottom 200px
    &__navegation
        position static !important
    &__arrow
        width 48px
        height 38px
        display: inline-block
        position absolute
        right -35px
        top 48%
        z-index: 5
        &.depoiments__arrow-prev
            right auto
            left: -35px
            & > span 
                transform: rotate(180deg)  
        & > span 
            position: absolute
            width 100%
            height: 100%
            top: -50%
            display: inline-block
            cursor: pointer;
            content: url('data:image/svg+xml;base64,')
            &.swiper-button-disabled
                opacity 0.7
        &-yellow
            width 48px
            height 38px
            display: inline-block
            position absolute
            right -35px
            top 90%
            z-index: 5
            &.showcase__arrow-prev
                right auto
                left: -35px
                & > span 
                    transform: rotate(180deg)                
            & span 
                position: absolute
                width 100%
                height: 100%
                top: -50%
                display: inline-block
                cursor: pointer;
                content: url('data:image/svg+xml;base64,')
                &.swiper-button-disabled
                    opacity 0.7
    &__pagination
        display: flex
        flex 0 0 100%
        max-width: 100%
        justify-content: center
        align-items: center
        height 16px
        flex-flow: row nowrap
        margin-top: 21px
        position: absolute
        bottom -200px
        left 0
        width 100%
        & > span 
            width 16px
            height 16px
            background #D7D7D7
            border-radius: 16px
            border 0
            &.swiper-pagination-bullet-active
                background #FFE700
    & .vitrine_title
        & h1
            font-family: Roboto
            font-weight: 400
            font-size: 35px
            color: #FFFFFF
            letter-spacing: 0
            text-align: center
        & small 
            font-family: Roboto
            font-size: 16px
            color: #8F8F8F
            letter-spacing: 0
            text-align: center
            font-weight: 400
            margin 0 auto
            display: block
            margin-bottom: 30px
    &__content
        font-family: Roboto
        font-weight: 300
        font-size: 18px
        color: #FFFFFF
        letter-spacing: 0
        text-align: center
    &__item
        &_container
            display: flex
            position relative
            width 300px
            height 370px     
            padding 40px 10
            text-align: center
            background: #252525;
            box-shadow: 9px 9px 10px 0 rgba(0,0,0,0.06);
            border-radius: 38px; 
            overflow hidden
            @media screen and (min-width: 993px)
                max-height: 370px
            & article 
                z-index: 2
                display: flex
                flex-flow: column nowrap
                justify-content: center
                align-items: center
                width: 100%
                & i 
                    display: flex
                    align-items: center
                    margin 0 auto
                    height 57px
            & h2
                font-weight: 300
                color: #FFFFFF
                letter-spacing: 0
                text-align: center
                & a 
                    color: #FFFFFF
            & figure 
                width 100%
                height 100%
                position: absolute
                display: flex
                flex-flow: row nowrap
                justify-content: center
                align-items: center
                top 50%
                margin-top: -185px
                left 50%
                z-index: 0
                & img 
                    position: relative
                    width: auto
                    max-width: initial
                    height 100%
                    left -50%
            &:after
                position: absolute
                content ''
                width 100%
                height: 100%
                left 0
                top 0
                background rgba(0,0,0,0.6)
                z-index: 1
/* Vitrine 2 */

.vitrin2
    margin-top: 85px
    &__title
        font-family: Roboto
        font-weight: 400
        font-size: 16px
        color: #8F8F8F
        letter-spacing: 0
        text-align: center
        & h1
            font-weight: 400
            font-size: 35px
            color: #252525
            letter-spacing: 0
            text-align: center
        & small 
            font-size: 16px
    &__link
        display: inline-block
        margin 0 auto
    &__container
        margin-top: 25px
        margin-bottom: 40px
        display: flex
        flex-flow: row nowrap
        align-items: flex-start
        margin-left: -15px
        margin-right: -15px
    &__item
        flex 0 0 calc(33.333333333% - 30px)
        margin 0 15px
        display: flex
        flex-flow: row nowrap
        justify-content: center
        align-items: flex-end
        position relative
        height 320px
        background: #252525;
        padding: 51px 25px
        box-shadow: 9px 9px 10px 0 rgba(0,0,0,0.06);
        border-radius: 38px;
        overflow hidden
        &:after
            position: absolute
            width 100%
            height 100%
            content ''
            display: inline-block
            left 0
            top 0
            background: #252525
            transition: all 400ms
            opacity 0.9
        &:hover
            &:after
                opacity 0.4
        & h5 
            z-index: 1
            font-family: Roboto
            font-weight: 400
            font-size: 22px
            color: #FFFFFF
            letter-spacing: 0
            & a 
                color: #FFFFFF
        & figure 
            position: absolute
            left: 50%
            top 50%
            width: 100%
            height 320px

            z-index: 0
            & img 
                position relative
                width 100%
                height 100%
                left -50%
                top -50%
                display: inline-block